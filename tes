#include <stdio.h>
#include <stdlib.h>
#include <time.h>

long long num_steps = 2000000000;
double step;
int main() {
   int i;
   double x, pi, exec_t,sum = 0.0;
   long start, finish;
   start = clock();
   step = 1.0/(double) num_steps;
  
   for(i=0;i<num_steps;i++)
   {
      x = (i+0.5)*step;
	
	  sum += 4.0/(1.0+x*x);
   }
   pi = step * sum;
   finish = clock();
   exec_t = (double) (finish - start)/CLOCKS_PER_SEC;
   printf("Nilai Pi : %lf\n",pi);
   printf("waktu eksekusi : %5.3f\n",exec_t);
}
